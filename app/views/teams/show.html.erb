  <h1><%= @project.name %></h1>
  <h1><%= @team.name %></h1>  

  <div>
    <h2> Group Members </h2> 
    <% @students.each do |student| %>
      <h3><%= student.first_name %></h3> 
    <% end %>
  </div>
<br>
  <div>
  <h2> Tasks </h2>
  <% @tasks.each do |task| %>
    <h3>due date: <%= task.deadline %></h3>
    <h3>points: <%= task.points %> points</h3>
    <h3>description:<%= task.description %></h3>
    <br>
  <%end %>
  </div>


    <% if current_teacher %>
    <h3> Add Group Member </h3>

    <%= form_tag "/student_teams", method: :post do %>
    <select name="student_id">
      <% @teacher.students.each do |student| %>
      <option value="<%= student.id %>"> <%= student.first_name %> </option>
      <% end %>
    </select>
    <div>
      Team ID: <input type="text" name="team_id" value="<%= @team_id %>">
    </div> 

  <br>


<input type="submit" value="Assign Students to Team">
<% end %>  

<br>

<a href="/projects/<%= @project.id %>/teams"><button class="btn">See all Teams</button></a>
<% end %>

