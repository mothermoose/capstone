  <h2><%= @project.name %></h2>
<br>

<h4><%= @team.name %> Group Members</h4>
  <div class="row">
      <div class="col-sm-12">
          <div class="well">
          <% @students.each do |student| %>
          <p><%= student.email %></p> 
          <% end %>  
      </div><!-- / col-sm-12 -->
  </div><!-- / row -->
  <br> 


  <h4> Tasks </h4>

   <div class="row">
<% @tasks.each do |task| %>
        <div class="col-sm-12">
            <div class="well">
               <p>due date: <%= task.deadline %></p>
               <p>points: <%= task.points %> points</p>
               <p>description:<%= task.description %></p>
               <br>    
            </div><!-- / col-sm-12 -->
        </div><!-- / row -->
  <% end %> 
  #add toggle button button to each task. This toggle will turn the task attribute of complete (in team_tasks) from false to true when clicked by a specific student. 
    <div>


    <% if current_student.admin? %>
    <h3> Add Group Member </h3>

    <%= form_tag "/student_teams", method: :post do %>
    <select name="student_id">
      <% @my_students.each do |student| %>
      <option value="<%= student.id %>"> <%= student.email %> </option>
      <% end %>
    </select>
    <div>
      Team ID: <input type="text" name="team_id" value="<%= @team_id %>">
    </div> 

  <br>
<input type="submit" value="Assign Students to Team">
<% end %>  

<br>

<a href="/projects/<%= @project.id %>/teams"><button class="btn">See all Teams</button></a>
<% end %>

