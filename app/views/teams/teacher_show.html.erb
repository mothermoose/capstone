<ul class="list-inline text-center">
  <a href="/projects"><button class="btn">All Projects</button></a>
</ul>

<h1 class= "text-center"> <%= @team.name %></h1>

<div class="row space-bottom-2x">
  <div class="col-sm-6">
    <h3> Group Members</h3>
      <div class="row">
        <div class="col-sm-12">
          <div class="well">
            <% @students.each do |student| %>
              <p><%= student.name %></p> 
            <% end %> 
          </div> <!-- / well -->
        </div><!-- / col-sm-12 -->
      </div><!-- / row -->
    <br>  
  </div>
  <div class="col-sm-6">

  <div class= "text-center">
    <h3> Add Group Member </h3>
    <br>
    <%= form_tag "/student_teams", method: :post do %>
      <select name="student_id">
        <% @my_students.each do |student| %>
          <option value="<%= student.id %>"> <%= student.name %> </option>
        <% end %>
      </select>
      <div>
        <input type="hidden" name="team_id" value="<%= @team_id %>">
      </div>  
      <br>
      <input type="submit" class="btn btn-default" value="Assign Student to Team">
    <% end %>
  </div>
</div><!-- / row -->


<% @tasks.each do |task| %>
  <div class="col-sm-12">
  <h3 class="text-center"> Tasks </h3>
    <div class="well">
       <p>due date: <%= task.deadline %></p>
       <p>points: <%= task.points %> points</p>
       <p>description:<%= task.description %></p>
       <br> 
    </div>   <!-- / well -->
  </div><!-- / col-sm-12 -->
<% end %> 

  
    

    