<section id="portfolio" class="info-box">
    <div class="container-fluid">
        <!-- portfolio filter --> 


        <ul class="portfolio-filter list-inline text-center">
         <% if current_student %>
            <li><a href="/teams" data-group="graphic-design">Your Projects</a></li>
        <% end %> 

        <% if current_teacher %>
            <li><a href="/projects" data-group="graphic-design">Your Projects</a></li>
            <li><a href="/projects/<%=@project.id %>" data-group="graphic-design">Back to Project</a></li>
        <% end %>

        </ul><!--end portfolio filter -->
        
        <ul class="row portfolio list-unstyled lightbox" id="grid">
            <% @teams.each do |team| %>
            
            <!-- project -->
            <li class="col-xs-6 col-md-4 project" data-groups='["illustration"]'>
                <div class="img-bg-color primary">
                    <a href="single-project.html" class="project-link"></a>
                    <!-- / project-link -->
                    <img src="images/project.jpg" alt="">
                    <!-- / project-image -->

                    <!-- project-hover-tools -->
                    <div class="project-hover-tools">
                        <a href="single-project.html" class="view-btn">
                            <i class="lnr lnr-eye"></i>
                        </a>
                        <a href="images/project.jpg" class="open-gallery">
                            <i class="lnr lnr-frame-expand"></i>
                        </a>
                    </div><!-- / project-hover-tools -->

                    <!-- project-details -->
                    <div class="project-details">
                        <h5 class="project-title"><a href="/teams/<%= team.id %>"><%= team.name %></a></h5>
                        <!-- <p class="skill">SKILLS</p> -->
                    </div><!-- / project-details -->
                </div><!-- / img-bg-color -->
            </li> 
        <% end %>

        <% if current_teacher %>
        <li class="col-xs-6 col-md-4 project" data-groups='["illustration"]'>
                <div class="img-bg-color primary">
                    <a href="single-project.html" class="project-link"></a>
                    <!-- / project-link -->
                    <img src="images/project.jpg" alt="">
                    <!-- / project-image -->

                    <!-- project-hover-tools -->
                    <div class="project-hover-tools">
                        <a href="single-project.html" class="view-btn">
                            <i class="lnr lnr-eye"></i>
                        </a>
                        <a href="images/project.jpg" class="open-gallery">
                            <i class="lnr lnr-frame-expand"></i>
                        </a>
                    </div><!-- / project-hover-tools -->
                    <!-- project-details -->
                    <div class="project-details">
                        <h5 class="project-title"><a href="/projects/<%= @project.id %>/teams/new">Create a New Team</a></h5>
                        <!-- <p class="skill">SKILLS</p> -->
                    </div><!-- / project-details -->
                </div><!-- / img-bg-color -->
            </li>
            <% end %>

          
