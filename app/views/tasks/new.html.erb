<ul class="list-inline text-center">
  <a href="/projects"><button class="btn">All Projects</button></a>
</ul>

<h1> Create a New Task </h1>

<%= form_tag "/tasks", method: :post do %>
<div>
Deadline: <input type="date" name="deadline" value="<%= @task.deadline %>">
</div>

<div>
Points: <input type="integer" name="points" value="<%= @task.points %>">
</div>

<div>
Description: <input type="string" name="description" value="<%= @task.description %>">
</div>

<div>
Project Id: <input type="integer" name="project_id" value="<%= @task.project_id %>">
</div>

<input type="submit" value="Create New Task">
<% end %>
